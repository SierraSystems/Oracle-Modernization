{
  "name": "oraclemodernization",
  "version": "0.1.0",
  "private": true,
  "main": "src/start.js",
  "build": {
    "appId": "some.id.ofyours",
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "category": "your.app.category.type",
      "iconUrl": "path-to-icon.png"
    },
    "mac": {
      "category": "your.app.category.type",
      "iconUrl": "path-to-icon.png"
    }
  },
  "dependencies": {
    "@bcgov/bootstrap-theme": "github:bcgov/bootstrap-theme",
    "@capacitor/cli": "^2.4.2",
    "@capacitor/core": "^2.4.2",
    "@capacitor/ios": "^2.4.2",
    "axios": "^0.20.0",
    "electron": "^10.1.3",
    "keycloak-js": "^11.0.2",
    "react": "^16.10.2",
    "react-bootstrap": "^1.3.0",
    "react-dom": "^16.10.2",
    "react-icons": "^3.11.0",
    "react-scripts": "3.4.3",
    "shared-components": "https://github.com/bcgov/react-shared-components/releases/download/0.5.9/shared-components-0.5.9.tgz"
  },
  "scripts": {
    "electron": "cross-env NODE_ENV=dev nodemon --exec \"\"electron .\"\"",
    "electron-build": "electron-builder",
    "start": "cross-env BROWSER=none npm run react-start",
    "react-start": "react-scripts start",
    "build": "react-scripts build",
    "react-test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "cross-env": "^7.0.2",
    "electron-builder": "^22.9.1",
    "electron-is-dev": "^1.1.0",
    "electron-reload": "^1.5.0",
    "nodemon": "^2.0.5"
  }
}
